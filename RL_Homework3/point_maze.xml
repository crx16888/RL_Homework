<mujoco model="point_maze">
  <option gravity="0 0 0"/>
  <worldbody>
    <light name="light" pos="0 0 1.5"/>
    <geom name="floor" type="plane" size="1 1 0.1" rgba="0.8 0.8 0.8 1"/>
    <geom name="target" type="sphere" pos="0.5 0.5 0.02" size="0.05" rgba="1 0 0 1"/>
    <body name="point" pos="0 0 0.02">
      <joint name="x" type="slide" axis="1 0 0"/>
      <joint name="y" type="slide" axis="0 1 0"/>
      <geom name="point_geom" type="sphere" size="0.03" rgba="0 0 1 1" group="0"/>
    </body>
  </worldbody>
  <actuator>
    <motor name="x_motor" joint="x" gear="1"/>
    <motor name="y_motor" joint="y" gear="1"/>
  </actuator>
</mujoco>